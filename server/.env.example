# Frontend
REACT_APP_API_URL=http://localhost:3030

# Database Configuration
# Choose database type: 'mysql' or 'supabase'
DB_TYPE=supabase

# MySQL/MariaDB Configuration
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=your_password
DB_NAME=zyboard_db

# Supabase Configuration (only needed if DB_TYPE=supabase)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here
SUPABASE_ANON_KEY=your_anon_key_here

# JWT
JWT_SECRET=your_very_long_and_secure_secret_key_here_make_it_at_least_32_characters

# Server Configuration
PORT_BACKEND=3030
NODE_ENV=development

# WebDAV Configuration
WEBDAV_URL=http://192.168.1.150:8111
WEBDAV_USERNAME=admin
WEBDAV_PASSWORD=admin

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB in bytes

# Supabase Storage Configuration (optional, for future file storage integration)
SUPABASE_STORAGE_BUCKET=zyboard-files